# Environment Variables Template
# Copy this file to .env and fill in your values

# Infura API Key (for Sepolia testnet)
INFURA_API_KEY=your_infura_api_key_here

# Private Key (for deployment - NEVER commit this to git)
PRIVATE_KEY=your_private_key_here

# Optional: Custom RPC URLs
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY
LOCALHOST_RPC_URL=http://localhost:8545

# Optional: Gas settings
GAS_LIMIT=3000000
GAS_PRICE=20000000000

# Optional: Contract addresses (auto-generated)
SEALED_AUCTION_ADDRESS=
SEALED_AUCTION_ABI_PATH=./abi/SealedAuction.json
